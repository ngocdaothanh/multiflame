package multiflame.container {	import flash.display.*;	import flash.events.*;	public class HelpTab extends Sprite {		public function HelpTab():void {			addEventListener(Event.ADDED, onAdded);		}		private function onAdded(event:Event):void {			if (event.target != this) {				return;			}			var s:Sprite = RoomTab.instance.gameInfo.helpSprite;			if (s != null && !contains(s)) {				addChild(s);			}		}			}}