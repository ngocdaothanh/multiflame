<% unless flash[:notice].nil? %><p class="notice"><%= flash[:notice] %></p><% end %>

<h2><%= _('Toy container') %></h2>
<p><%= link_to _('Update container'), edit_admin_toy_container_path %></p>

<h2><%= _('Games') %></h2>
<p><%= link_to _('Upload new toy'), new_admin_toy_path %></p>

<% unless @toys.blank? %>
  <% @toys.each do |t| %>
<p><%= link_to h(t.name), edit_admin_toy_path(t) %></p>
  <% end %>
<% end %>