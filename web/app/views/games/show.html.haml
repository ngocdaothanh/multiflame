- @navigator = @game.name

#game_flash.left
  - s = _('Please install %{getflashplayer}') % {:getflashplayer => link_to(_('Flash player 9 or above'), 'http://www.adobe.com/go/getflashplayer')}
  %p{:class => 'notice'}= s

.right
  %h2= _('Public channels')
  %ul
    - [_('Newbie'), _('Easy'), _('Normal'), _('Hard'), _('World class')].each do |level|
    %li= link_to(level, play_path(:id => @game.id, :channel => level))
    - end

%div{:style => 'clear:both'}

%script{:type => 'text/javascript'}
  == var so = new SWFObject('/games/#{@game.id}/game.swf', 'game_flash', '100%', '250', '9', '#FFFFFF');
  so.useExpressInstall('/javascripts/expressinstall.swf');
  so.write('game_flash');
